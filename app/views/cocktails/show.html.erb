<div class="banner px-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, gravity: :face %>');">
    <h1 class="card-desc-mid"><%= @cocktail.name %></h1>
</div>

  <div class="container">
    <div>
    <%= simple_form_for [ @cocktail, @dose ] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.submit "Submit dose", class: "btn btn-primary" %>
    <% end %>
    </div>

    <div>
    <% @cocktail.doses.each do |dose| %>
    <% if @cocktail.photo.attached? %>
    <div>
      <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
    </div>
    <% end %>
      <div class="card-product">
        <div class="card-product-info">
          <ul>
            <li>
              <h2><%= dose.ingredient.name %></h2>
              <p><%= dose.description %></p>
            </li>
          </ul>
        </div>

      </div>
    <% end %>
    </div>
    <%= link_to  "To main page", cocktails_path %>
  </div>

  



</div>